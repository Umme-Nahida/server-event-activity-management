model Payment {
  id         String   @id @default(uuid())
  amount     Float
  status     String
  createdAt  DateTime @default(now())

  user       User   @relation(fields: [userId], references: [id])
  userId     String

  event      Event  @relation(fields: [eventId], references: [id])
  eventId    String

  @@unique([userId, eventId])
}